{
  "name": "hooks-utils-monorepo",
  "description": "Hooks utilities monorepo",
  "author": "Blockmatic.io",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo 'no tests'",
    "prebuild": "tsc --build --clean",
    "build": "tsc --build",
    "commit": "dev-scripts commit",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "release": "env-cmd lerna publish",
    "diff": "lerna diff",
    "lint": "eslint --ignore-path .gitignore \"**/*.+(js|ts|tsx)\"",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\""
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@blockmatic/eslint-config": "^2.0.2",
    "@blockmatic/prettier-config": "^2.1.0",
    "@blockmatic/tsconfig": "^1.8.4",
    "env-cmd": "^10.1.0",
    "eslint": "8.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lerna": "^6.5.1",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  },
  "repository": "git@github.com:blockmatic/hooks-utils.git",
  "license": "MIT"
}